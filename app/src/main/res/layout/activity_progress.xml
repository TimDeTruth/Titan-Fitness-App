<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProgressActivity">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart_progress_volume"
        android:layout_width="match_parent"
        android:layout_height="643dp"
        android:background="@color/cardview_dark_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_progress_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_greek"
            android:gravity="center"
            android:text="@string/progress"
            android:textColor="@color/design_default_color_error"
            android:textSize="60sp" />

    </com.github.mikephil.charting.charts.PieChart>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_dark_background"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_progress_upper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/cardview_dark_background" />

        <TextView
            android:id="@+id/textView_progress_lower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textview"
            android:textColor="@color/cardview_dark_background" />

        <TextView
            android:id="@+id/textView_progress_core"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/cardview_dark_background" />

    </LinearLayout>


</LinearLayout>