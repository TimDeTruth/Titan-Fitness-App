<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background">


    <ImageView
        android:id="@+id/imageView_splashscreen"
        android:layout_width="0dp"
        android:layout_height="0dp"


        android:src="@drawable/animation_wallpaper"
        android:transitionName="transition_splash_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_splashscreen_logo"
        android:contentDescription="@string/splash_image" />

    <TextView
        android:id="@+id/textView_splashscreen_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/font_greek"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowDx="20"
        android:shadowDy="20"
        android:shadowRadius="5"
        android:text="@string/splash_title"
        android:textColor="@color/design_default_color_error"
        android:textSize="69sp"
        android:transitionName="transition_splash_text"
        app:layout_constraintBottom_toTopOf="@+id/imageView_splashscreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>