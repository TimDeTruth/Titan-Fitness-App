<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_main_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:fontFamily="@font/font_greek"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowDx="20"
        android:shadowDy="20"
        android:shadowRadius="5"
        android:text="@string/app_title"
        android:textColor="@color/design_default_color_error"
        android:textSize="69sp"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="34dp"

        android:transitionName="transition_splash_text"
        />

    <TextView
        android:id="@+id/textView_main_slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:fontFamily="@font/font_greek"
        android:shadowColor="@color/design_default_color_on_secondary"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="5"
        android:text="@string/all_shall_kneel_before_us"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_error"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="160dp" />

    <ImageView
        android:id="@+id/imageView_main_profile"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        app:srcCompat="@drawable/chris"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="242dp"
        tools:src="@drawable/chris"


        android:transitionName="transition_splash_image"
        />

    <EditText
        android:id="@+id/editText_main_username"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="16dp"
        android:textColor="@color/design_default_color_error"
        android:textColorHint="@color/white"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="340dp" />

    <EditText
        android:id="@+id/editText_main_password"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:padding="16dp"
        android:textColor="@color/design_default_color_error"
        android:textColorHint="@color/white"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="437dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.3"
        app:menu="@menu/menu_bottom_signin"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="522dp" />

</LinearLayout>