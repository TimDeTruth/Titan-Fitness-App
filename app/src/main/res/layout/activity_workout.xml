<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/plainText_workout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    android:orientation="vertical"
    tools:context=".HomeActivity">


    <TextView
        android:id="@+id/textView_workout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/font_greek"
        android:gravity="center"
        android:text="Exercise"
        android:textColor="@color/design_default_color_error"
        android:textSize="48sp" />

    <Spinner
        android:id="@+id/spinner_workout_dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight=".5"
        android:background="@color/some_gray" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_workout"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_weight="1"
        android:alpha="0"
        android:src="@drawable/exercise_upper_push_ups" />

    <TextView
        android:id="@+id/texview_workout_defaultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Select one from above"
        android:textSize="34sp"
        android:visibility="visible" />

    <Button

        android:id="@+id/button_workout_start"

        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:alpha="0"
        android:background="@drawable/circle_button"
        android:fontFamily="@font/font_greek"
        android:padding="15dp"
        android:text="Start"
        android:textAppearance="?android:textAppearanceLarge"

        android:textColor="@color/design_default_color_error"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/textView_workout_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"

        android:layout_weight="1"
        android:alpha="0"
        android:gravity="center"
        android:paddingBottom="0dp"
        android:text="00:30:00"
        android:textColor="#000000"
        android:textSize="50dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText_workout_reps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:alpha="0"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:text="0" />

    <Button
        android:id="@+id/button_workout_submit"
        android:layout_width="179dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:alpha="0"
        android:fontFamily="@font/font_greek"
        android:text="Submit"
        android:textColor="#E10707"
        android:textSize="24sp" />

</LinearLayout>